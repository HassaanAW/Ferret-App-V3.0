        <TextView
            android:id="@+id/vulnerableLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ipAddressLabel"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Vulnerable:"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView

            android:id="@+id/vulnerable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ipAddress"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/vulnerableLabel"

            android:text="..."
            android:textColor="@color/Blood"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numvulnerableLabel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vulnerable"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Number of Weaknesses:"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView

            android:id="@+id/numvulnerable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vulnerable"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/numvulnerableLabel"

            android:text="..."
            android:textColor="@color/Blood"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vulndetailsheading"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numvulnerableLabel"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Weakness Details"
            android:textColor="@color/Shakespeare"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/vulndetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vulndetailsheading"

            android:layout_marginTop="10dp" />

    </RelativeLayout>


</LinearLayout>