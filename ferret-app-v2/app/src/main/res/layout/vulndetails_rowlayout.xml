<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativelayout"

    android:gravity="center_vertical">

    <TextView
        android:id="@+id/vulnidentLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Identifier:"
        android:textColor="@color/Black"
        android:textSize="15dp"


        />

    <TextView
        android:id="@+id/vulnident"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/vulnidentLabel"
        android:text="ident"
        android:textColor="@color/frowncolors"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vulndescLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vulnidentLabel"
        android:textColor="@color/Black"
        android:textSize="15dp"
        android:text="Description:"/>

    <TextView
        android:layout_marginTop="20dp"

        android:id="@+id/vulndesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="desc"

        android:layout_toRightOf="@id/vulndescLabel"
        android:textColor="@color/Blood"
        android:textSize="15dp"

        />
</RelativeLayout>